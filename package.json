{
  "name": "@agnilabs/conv-commit-liner",
  "type": "module",
  "version": "0.0.3",
  "description": "A lightweight conventional commit message generator",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
