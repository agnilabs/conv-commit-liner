  "license": "MIT",
  "homepage": "https://github.com/agnilabs/conv-commit-liner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agnilabs/conv-commit-liner.git"
  },
  "bugs": "https://github.com/agnilabs/conv-commit-liner/issues",
  "author": "agni labs",
  "devDependencies": {
    "bun-plugin-dts": "^0.3.0",
    "@types/bun": "^1.1.10",
    "@types/node": "^20.10.4"
  },
  "dependencies": {
    "simple-git": "^3.21.0",
    "commander": "^11.1.0"
